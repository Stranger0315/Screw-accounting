
.container {
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.1);
}
.item {
  margin-bottom: 20px;
  display: flex;
  align-items: center;
}
.label {
  width: 80px;
  font-weight: bold;
}
.input {
  flex: 1;
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.picker {
  flex: 1;
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.btn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #007aff;
  color: #fff;
  border-radius: 5px;
}
.save-btn {
  margin-bottom: 10px;
}
